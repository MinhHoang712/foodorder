<odoo>
    <data>
        <record id="res_users_form_view_custom" model="ir.ui.view">
            <field name="name">res.users.form.view.custom</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="inside">
                    <group>
                        <field name="qr" widget="image" options="{'size': [90, 90]}"/>
                        <field name="stk"/>
                        <field name="nganhang"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="action_res_users_custom" model="ir.actions.act_window">
            <field name="name">Thông tin Thanh Toán</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="res_users_form_view_custom"/>
        </record>

    </data>
</odoo>
